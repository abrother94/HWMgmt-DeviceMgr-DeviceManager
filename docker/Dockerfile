FROM alpine:3.9.4
WORKDIR /app/
RUN apk update
RUN apk add sshpass=1.06-r0 \
            openssh-client=7.9_p1-r6
COPY device_key/https-server.crt .
COPY device_key/https-server.key .
COPY apps/main /app/
ENTRYPOINT ["./main"]
